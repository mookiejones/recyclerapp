                android:layout_width="wrap_content"
                android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/loa_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/loa"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/loa"
                    style="@style/RowItemStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/lwl_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="@string/lwl"
                    style="@style/LabelStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <TextView
                    android:id="@+id/lwl"
                    style="@style/RowItemStyle"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            </LinearLayout>
        </LinearLayout>
