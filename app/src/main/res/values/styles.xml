<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LabelStyle">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textStyle">bold</item>

        <item name="android:layout_marginRight">5sp</item>
    </style>

    <style name="ValueStyle">
        <item name="android:layout_marginRight">5sp</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RowItemStyle">

    </style>

    <style name="GroupItemStyle">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BoatItemValueStyle">
        <item name="android:paddingStart">15dp</item>
    </style>
    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="HeaderTitle" parent="TextAppearance.Title">
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">@dimen/padding_normal</item>
        <item name="android:paddingStart">15sp</item>
    </style>

    <style name="BoatFooter">
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="InfoCardContainer">
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="InfoCardLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="InfoCardValue">

    <item name="android:textColor">#FF0000</item>

    </style>
</resources>
